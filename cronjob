#!/bin/bash
#:r !env | grep SSH_
SSH_AGENT_PID=1743
SSH_AUTH_SOCK=/tmp/keyring-pPFFCc/ssh
#
export SSH_AGENT_PID SSH_AUTH_SOCK

cd /tmp
rm -rf dalton
git clone git@repo.ctcc.no:dalton.git
cd dalton
./setup --fc=mpif90 --cc=mpicc -D CPP=-DDISABLE_XC_RESPONSE_SANITY_CHECK
cd build
make dalton.x || exit
git clone git@delta.biotech.kth.se:vahtras/fdrsp.git
cd fdrsp
export PATH=$PATH:/tmp/dalton/build
./submitall $@
#
#tar -C /var/www/dalton -xzf test_findif.tgz
scp test_findif.tgz vidar.biotech.kth.se:
ssh vidar.biotech.kth.se tar -C ./pub -xzf test_findif.tgz
